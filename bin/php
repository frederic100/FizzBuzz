#!/bin/sh

docker container ls | grep fizzbuzz-php
status=$?
if [ $status = 0 ]
then
docker exec \
    -ti \
    -e APP_ENV=test \
    fizzbuzz-php php $@
else
## execution de PHP de mani√®re autonome (pas besoin d'un environnement de containers)
docker run \
    --init \
    --rm \
    -ti \
    --name php-fizzbuzz-running-script \
    -v "$(pwd)/bin/docker/php/php.ini:/usr/local/etc/php/php.ini" \
    -v "$PWD":"$PWD" \
    --user 1000:1000 \
    -w "$PWD" \
    fizzbuzz-php php $@
fi

